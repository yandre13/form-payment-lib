{
 "compilerOptions": {
   "declaration": true,
   "declarationDir": "./lib",
   "strict": true,
   "allowSyntheticDefaultImports": true,
   "sourceMap": true,
   "noUnusedParameters": true,
   "strictNullChecks": true,
   "moduleResolution": "node",
   "noImplicitAny": true,
   "outDir": "./lib",
   "target": "es5",
   "jsx": "react"
 },
 "include": ["src/**/*"],
 "exclude": ["node_modules"]
}